                .click(function () {
                    var source = $(this);
                    var sourceUrl = $(this).attr("href");
                    var links = [];
                    $("#menu div a").each(function () {
                        if ($(this).attr("href") == sourceUrl)
                            $(this).css({ border: "blue 1px solid", opacity: 1 });
                        else
                            $(this).fadeTo("normal", .5).css({border: "none"});
                    });
                    $.get(sourceUrl, null, function (data) {
                        $("#main").html(data);
                    });
                    return false;
                })*/;
        });

        function slideMenu(links, index, callback) {
            if (links.length == index) {
                callback();
                return;
            }
            links[index].fadeOut("fast", function () {
                slideMenu(links, index + 1, callback);
            });
        }
    </script>
</body>
</html>
