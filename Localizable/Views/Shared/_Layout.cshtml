<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" href=""/>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <b style="font-size: x-large; color: white">Localizable</b>
                <p style="font-style: italic; color: white; margin-top: -5px">- the online community for high-quality app translations!</p>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        <br/>
        </header>
        <section id="main">
                <h3 style="text-align: center">Translate a...</h3>
            <div>
                <a href="/translate/dll" class="button">.dll-file</a>
                <a href="/translate/strings" class="button">.strings-file</a>
                <a href="/translate/resx" class="button">.resx-file</a>
                <a href="/translate/search" class="button">single word or phrase</a>
            </div>
            <h3 style="text-align: center">Help us</h3>
            <div>
                <a href="/translate" class="button">
                    Provide your translation services
                </a>
                <a href="/list" class="button">
                    Vote on contributed translations
                </a>
            </div>
            <h3 style="text-align: center">About</h3>
            <div>
            <a href="/about" class="button">
                How does this work?
            </a>
            </div>
            <h3 style="text-align: center">Other services</h3>
            <div>
            <a href="/resources" class="button">
                Developer resources
            </a>
            <a href="/translators-corner" class="button">
                Translators' corner (forum)
            </a>
            </div>
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
    <script>
        $(function () {
            $(".button")
                .button()
